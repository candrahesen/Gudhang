<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="4dp"
        android:layout_margin="4dp"
        card_view:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/fotoProduk"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/dummy_foto_produk"
                android:scaleType="centerCrop"
                android:background="@color/colorPrimaryLight"
                />

            <TextView 
                android:id="@+id/namaProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="4dp"
                android:layout_centerInParent="true"
                android:text="Nama Produk"
                android:textSize="16dp"
                android:layout_below="@+id/fotoProduk"
                />

            <TextView 
                android:id="@+id/rupiah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="4dp"
                android:text="Rp "
                android:layout_below="@+id/namaProduk"
                />

            <TextView 
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="1dp"
                android:text="Harga"
                android:layout_below="@+id/namaProduk"
                android:layout_toRightOf="@+id/rupiah"
                />

            <TextView 
                android:id="@+id/kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="/Kg"
                android:layout_below="@+id/namaProduk"
                android:layout_toRightOf="@+id/harga"
                />

            <ImageView
                android:id="@+id/fotoLokasi"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/ic_action_lokasi"
                android:contentDescription="@null"
                android:layout_below="@+id/rupiah"
                />

            <TextView 
                android:id="@+id/lokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="1dp"
                android:text="Lokasi"
                android:layout_below="@+id/rupiah"
                android:layout_toRightOf="@+id/fotoLokasi"
                />

            <ImageView
                android:id="@+id/fotoGrosir"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/ic_action_grosir"
                android:contentDescription="@null"
                android:layout_below="@+id/fotoLokasi"
                />

            <TextView 
                android:id="@+id/grosir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="1dp"
                android:text="Grosir"
                android:layout_below="@+id/fotoLokasi"
                android:layout_toRightOf="@+id/fotoGrosir"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>